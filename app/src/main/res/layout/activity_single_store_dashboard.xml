<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singleStore.SingleStoreDashboard">

    <LinearLayout
        android:id="@+id/layout_setYourStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Set This store as your's."
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_setYourStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Set as Your's"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_singleStore"
        android:layout_below="@+id/layout_setYourStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="6dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:verticalSpacing="6dp" />

</RelativeLayout>